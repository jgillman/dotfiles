# Check for Homebrew,
# Install if we don't have it
if ! hash brew 2>/dev/null; then
  echo "Installing homebrew..."
  ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
fi

# Update homebrew recipes
brew update

# Make sure git is installed
brew install git

brew install coreutils
brew install findutils
brew install bash
brew install zsh

# Install these
binaries=(
  cheat
  ffmpeg
  graphicsmagick
  heroku
  htop
  hub
  keybase
  macvim
  md5sha1sum
  mobile-shell
  mpv
  mtr
  namebench
  node
  ranger
  reattach-to-user-namespace
  rename
  rtv
  s3cmd
  ssh-copy-id
  the_silver_searcher
  tig
  tmux
  watch
  wget
  youtube-dl
)

echo "Installing binaries..."
brew install ${binaries[@]}

echo "Cleaning up..."
brew cleanup



# Install brew cask
brew install caskroom/cask/brew-cask

apps=(
  1password
  alfred
  appclearner
  atext
  bartender
  caffeine
  cathode
  crashplan
  dash
  disk-inventory-x
  docker
  dropbox
  evernote
  fantastical
  firefox
  flux
  google-chrome
  gpgtools
  imagealpha
  imageoptim
  istat-menus
  iterm
  keyboard-cleaner
  launchcontrol
  macpaw-gemini
  mediainfo
  monodraw
  netspot
  qlmarkdown
  qlstephen
  quicklook-json
  screenhero
  slack
  spotify
  steam
  the-unarchiver
  transmit
  tripmode
  tunnelblick
  vagrant
  virtualbox
  xld
)

# Install apps to /Applications
echo "Install apps..."
brew cask install ${apps[@]}

echo "Cleaning up..."
brew cleanup
