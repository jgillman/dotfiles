# Check for Homebrew,
# Install if we don't have it
if ! hash brew 2>/dev/null; then
  echo "Installing homebrew..."
  ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
fi

# Update homebrew recipes
brew update

# Make sure git is installed
brew install git

brew install coreutils
brew install findutils
brew install bash
brew install zsh

# Install these
binaries=(
  ag
  cheat
  ffmpeg
  graphicsmagick
  heroku
  htop
  hub
  macvim
  md5sha1sum
  mobile-shell
  mtr
  namebench
  node
  ranger
  reattach-to-user-namespace
  rename
  rtv
  ssh-copy-id
  tig
  tmux
  watch
  wget
  youtube-dl
)

echo "Installing binaries..."
brew install ${binaries[@]}

echo "Installing mpv with bundle..."
brew install mpv --with-bundle

echo "Cleaning up..."
brew cleanup


fonts=(
  font-envy-code-r
  font-fira-code
  font-inconsolata
)

echo "Tapping the fonts keg..."
brew tap caskroom/fonts

echo "Installing fonts..."
brew cask install ${fonts[@]}


apps=(
  1password
  alfred
  appcleaner
  atext
  bartender
  cathode
  crashplan
  dash
  disk-inventory-x
  docker
  dropbox
  evernote
  fantastical
  firefox
  google-chrome
  gpg-suite
  imagealpha
  imageoptim
  istat-menus
  iterm2
  keepingyouawake
  keybase
  keyboard-cleaner
  launchcontrol
  mediainfo
  monodraw
  netspot
  qlimagesize
  qlmarkdown
  qlstephen
  qlvideo
  quicklook-json
  slack
  spotify
  steam
  the-unarchiver
  transmit
  tripmode
  tunnelblick
  vagrant
  virtualbox
  xld
)

# Install apps to /Applications
echo "Install apps..."
brew cask install ${apps[@]}

echo "Cleaning up..."
brew cleanup
