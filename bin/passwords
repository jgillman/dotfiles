#!/usr/bin/env bash

function main() {
  local count=${1}
  : count=${count:=5}
  local preset=JGILLMAN

  if hash hsxkpasswd 2>/dev/null; then
    /usr/local/bin/hsxkpasswd --preset "${preset}" ${count}
  else
    echo "hsxkpasswd is not installed"
    echo "see: https://github.com/bbusschots/hsxkpasswd"
    exit 1
  fi
}

main "$@"
