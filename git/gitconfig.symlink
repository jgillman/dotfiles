# Local/private config goes in the include
[include]
  path = ~/.gitconfig.local

[user]
  name = Trevor Stow
  email = trevorstow@gmail.com
	signingkey = 21FFF5DF1021326E

[alias]
  st = status
  co = checkout
  sp = stash pop
  di = diff
  dc = diff --cached
  dn = diff --name-only
  dnm = diff --name-only master
  back = reset --soft HEAD^
  root = !pwd
  br = branch

[commit]
	gpgsign = true

[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true

[core]
  excludesfile = ~/.gitignore
  editor = vim

[github]
	user = wotsrovert

[push]
  default = current
[grep]
  extendRegexp = true
  lineNumber = true
[heroku]
  account = personal
[gpg]
	program = gpg
