[user]
	name = Joel Gillman
	email = joeltgillman@gmail.com

[alias]
	st = status
	co = checkout
	sp = stash pop
	di = diff
	dc = diff --cached
	mylog = log --author=Joel

	head = !git l -1
	h = !git head
	r = !git l -20
	l = "!source ~/.githelpers && pretty_git_log"

	fhs = !git flow hotfix start
	fhf = !git flow hotfix finish
	ffs = !git flow feature start
	fff = !git flow feature finish
	frs = !git flow release start
	frf = !git flow release finish

[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = true
	pager = true

[core]
	excludesfile = ~/.gitignore
	editor = vim

[github]
	user = jgillman

[push]
	default = tracking
