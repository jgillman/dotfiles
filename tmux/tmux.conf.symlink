# Remap prefix to Control + a
set -g prefix C-a
unbind C-b

# Map Control + a then a to regular Control + a
bind a send-prefix

# Use vi mode keys because I'm use to vim
set -g mode-keys vi
set -g status-keys vi
# reload config
unbind r
bind r source-file ~/.tmux.conf\; display "Config reloaded!"
# set -g mode-keys vi
# set -g status-keys vi

# Enable mouse support (works in iTerm)
# set-window-option -g mode-mouse on
# set-option -g mouse-select-pane on
# set-option -g mouse-resize-pane on
# set-option -g mouse-select-window on

# Quick pane cycling
unbind ^A
bind ^A select-pane -t :.+

# No delay for escapes
set -sg escape-time 0

# Always use 256 colors
set -g default-terminal "screen-256color"

# Set scrollback to be a bit bigger
set -g history-limit 10000

# Easier window splitting
unbind %
bind | split-window -h
bind - split-window -v

# Bind monitor activity
bind m setw monitor-activity
bind M command-prompt -p "monitor-silence (seconds)" "setw monitor-silence %%"

# THEME
set-option -g status-utf8 on

set-option -g status-interval 60
set-option -g status-bg colour235
set-option -g status-fg colour244
set-option -g status-left '#[bg=green,fg=black]⣿ ☯ #H ⡇ #[default,fg=green]⮀#[default]'
set-option -g status-right '#[fg=green]⮂#[bg=green,fg=black]#(uptime | cut -d "," -f 4) #[default]'
set-window-option -g window-status-format ' #I #W '
set-window-option -g window-status-current-format '⮀#[fg=white] #I #W #[default]⮂'

set-window-option -g window-status-current-bg colour125
set-window-option -g window-status-current-fg colour235

set-option -g status-right-length 60
set-option -g status-left-length 60

# Start windows and panes at 1 not 0
set -g base-index 1
setw -g pane-base-index 1

# Set window notifications
setw -g monitor-activity on
set -g visual-activity on

# Automatically set window title
setw -g automatic-rename

# Pane organizing
bind-key j command-prompt -p "join pane from:"  "join-pane -s '%%'"
bind-key s command-prompt -p "send pane to:"  "join-pane -t '%%'"

# Pane movement
bind h select-pane -L
bind j select-pane -D
bind k select-pane -U
bind l select-pane -R
